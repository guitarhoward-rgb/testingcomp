<body>
  <h1>Need a Compliment?</h1>
  <div id="compliment">Click the button below to get one!</div>
  <button onclick="giveCompliment()">Give Me One</button>

  <script>
    const compliments = [
      "You're doing better than you think.",
      "Your smile could light up a whole room.",
      "You're a genius in disguise.",
      "Someone out there is inspired by you.",
      "You're more capable than you realize.",
      "You make the world better just by being in it.",
      "You're crushing it right now — seriously.",
      "You're a walking beam of sunshine.",
      "You’re cooler than the flip side of a pillow.",
      "You’re the reason someone believes in good people."
    ];

    function giveCompliment() {
      const index = Math.floor(Math.random() * compliments.length);
      document.getElementById("compliment").textContent = compliments[index];
    }
  </script>
</body>
